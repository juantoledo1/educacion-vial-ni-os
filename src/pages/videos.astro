    <!-- Agregar más filas de videos según sea necesario -->
  </div>
</Layout>

<style>
  .card {
    border-radius: 0.5rem;
    border: 2px solid #283b3d; /* Borde celeste suave */
    background-color: #81f3f3; /* Fondo blanco suave para el contenido */
  }

  .card-body {
    text-align: center; /* Centrar el texto en el cuerpo de la tarjeta */
  }

  .embed-responsive {
    margin-bottom: 1rem;
  }

  .embed-responsive-item {
    max-width: 100%;
    height: auto;
  }
</style>
