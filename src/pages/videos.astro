---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Videos de Seguridad Vial">
  <h2 class="text-center my-4">Videos de Seguridad Vial</h2>
  
  <div class="container">
    <div class="row">
      <!-- Bloque de video 1 -->
      <div class="col-md-6 mb-4">
        <div class="card border-light">
          <div class="card-body text-center">
            <h5 class="card-title">Título del Video 1</h5>
            <p class="card-text">Descripción breve del video 1 que explica su contenido y propósito.</p>
            <p class="card-text"><small class="text-muted">Autor: Nombre del Autor 1</small></p>
            <div class="embed-responsive embed-responsive-16by9 mx-auto">
              <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/VIDEO_ID_1" allowfullscreen></iframe>
            </div>
          </div>
        </div>
      </div>
      <!-- Fin del bloque de video 1 -->

