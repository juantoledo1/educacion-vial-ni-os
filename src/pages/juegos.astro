---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Juegos - Educación Vial para Niños">
  <h2>Juegos Educativos</h2>
  
  <div class="row mt-4">
    <div class="col-md-6 mb-4">
      <div class="card">
        <div class="card-body">
          <h3 class="card-title">Juego de Memoria</h3>
          <p class="card-text">Encuentra los pares de señales de tránsito iguales.</p>
          <!-- Botón que dirige a la página del juego de memoria -->
          <a href="/juego-memoria" class="btn btn-primary">Ir al Juego de Memoria</a>
        </div>
      </div>
    </div>
    
    <div class="col-md-6 mb-4">
      <div class="card">
        <div class="card-body">
          <h3 class="card-title">Trivia de Seguridad Vial</h3>
          <p class="card-text">Responde preguntas sobre seguridad vial y aprende mientras juegas.</p>
          <!-- Botón que dirige a la página de trivia -->
          <a href="/trivia" class="btn btn-primary">Ir a la Trivia</a>
        </div>
      </div>
    </div>
  </div>

  <!-- Nueva sección de videos educativos -->
  <div class="row mt-4">
    <div class="col-md-6 mb-4">
      <div class="card">
        <div class="card-body">
          <h3 class="card-title">Videos Educativos</h3>
          <p class="card-text">Explora nuestros videos educativos sobre seguridad vial.</p>
          <!-- Botón que dirige a la página de videos -->
          <a href="/videos" class="btn btn-primary">Ver Videos</a>
        </div>
      </div>
    </div>
  </div>
</Layout>
